<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>

    <h1> <%= title %> </h1>

    <%- include('partials/nav.ejs') %>

    <form action="/edit/<%= user._id %> " method="POST">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %> ">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age %> ">
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="email" placeholder="Digite o seu e-mail" value="<%= user.email %> ">
        </div>
        <button type="submit">Editar</button>
    </form>

    <% if (typeof message !== 'undefined') { %> 
        <%= message %> 
    <% } %> 

    <%- include('partials/foot.ejs') %> 
    
</body>
</html>